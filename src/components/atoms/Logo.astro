---
// src/components/atoms/Logo.astro
---

<div class="logo">
    <img src="/favicon.svg" alt="JoaloDev Logo" class="logo__icon" />
    <span class="logo__text">JOALODEV</span>
  </div>
  
  <style>
    .logo {
      display: flex;
      align-items: center;
      gap: 0.75rem;
      padding: 0 2rem;
    }
  
    .logo__icon {
      width: 40px;
      height: 40px;
      filter: drop-shadow(0 0 10px rgba(0, 240, 255, 0.5));
      transition: all 0.3s ease;
    }
  
    .logo__text {
      font-family: 'Orbitron', sans-serif;
      font-size: 1.4rem;
      font-weight: 900;
      color: #00f0ff;
      letter-spacing: 3px;
      text-shadow: 0 0 20px rgba(0, 240, 255, 0.6);
      transition: all 0.3s ease;
    }
  
    .logo:hover .logo__icon {
      filter: drop-shadow(0 0 20px rgba(0, 240, 255, 0.8));
      transform: rotate(360deg);
    }
  
    .logo:hover .logo__text {
      text-shadow: 0 0 30px rgba(0, 240, 255, 0.9);
    }
  
    @media (max-width: 768px) {
      .logo {
        padding: 0 1rem;
        gap: 0.5rem;
      }
  
      .logo__icon {
        width: 32px;
        height: 32px;
      }
  
      .logo__text {
        font-size: 1.1rem;
        letter-spacing: 2px;
      }
    }
  
    @media (max-width: 480px) {
      .logo__icon {
        width: 28px;
        height: 28px;
      }
  
      .logo__text {
        font-size: 0.95rem;
        letter-spacing: 1.5px;
      }
    }
  </style>