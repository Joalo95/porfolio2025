---
// src/components/molecules/Sidebar.astro
export interface Tab {
  id: string;
  label: string;
  active?: boolean;
}

export interface Props {
  tabs: Tab[];
  resumeLink?: string;
}

const { tabs, resumeLink = '#' } = Astro.props;
---

<div class="sidebar-wrapper">
  <div class="sidebar">
    <div class="sidebar__content">
      {tabs.map((tab) => (
        <div 
          class={`sidebar__item js-sidebar--li ${tab.active ? 'active' : ''}`}
          data-target={tab.id}
        >
          {tab.label}
        </div>
      ))}
    </div>
  </div>

  <div class="link-drive">
    <span class="link-drive__text">
      AVAILABLE<br>FOR YOU!
    </span>
    <a href={resumeLink} class="link-drive__button">
      RESUME
    </a>
  </div>
</div>

<style>
  .sidebar-wrapper {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .sidebar {
    width: 100%;
    flex: 1;
    display: flex;
    align-items: center;
    position: relative;
    padding-top: 80px;
  }

  .sidebar__content {
    padding: 2rem 1.5rem;
    width: 100%;
  }

  .sidebar__item {
    font-family: 'Orbitron', sans-serif;
    font-size: 1.1rem;
    font-weight: 700;
    display: block;
    opacity: 0.5;
    color: #00f0ff;
    cursor: pointer;
    transition: all 0.3s ease;
    padding: 1rem 0.5rem;
    margin: 0.5rem 0;
    position: relative;
    text-transform: uppercase;
    letter-spacing: 2px;
  }

  .sidebar__item::before {
    content: '';
    position: absolute;
    left: -1.5rem;
    top: 50%;
    transform: translateY(-50%);
    width: 0;
    height: 2px;
    background: linear-gradient(90deg, #00f0ff, #ff00ff);
    transition: width 0.3s ease;
  }

  .sidebar__item:hover {
    opacity: 0.8;
    transform: translateX(5px);
  }

  .sidebar__item.active {
    opacity: 1;
    color: #00f0ff;
    text-shadow: 0 0 20px rgba(0, 240, 255, 0.8);
  }

  .sidebar__item.active::before {
    width: 1rem;
  }

  .link-drive {
    width: 100%;
    height: 180px;
    border-top: 1px solid rgba(0, 240, 255, 0.2);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 2rem;
  }

  .link-drive__text {
    font-family: 'Orbitron', sans-serif;
    display: block;
    margin-bottom: 1.5rem;
    color: #00f0ff;
    font-weight: 700;
    font-size: 1rem;
    text-align: center;
    letter-spacing: 2px;
    text-shadow: 0 0 10px rgba(0, 240, 255, 0.5);
  }

  .link-drive__button {
    font-family: 'Orbitron', sans-serif;
    display: inline-block;
    background: linear-gradient(135deg, rgba(0, 240, 255, 0.2), rgba(138, 43, 226, 0.2));
    padding: 0.75rem 2rem;
    border: 2px solid #00f0ff;
    font-size: 1rem;
    font-weight: 700;
    color: #00f0ff;
    text-decoration: none;
    text-transform: uppercase;
    letter-spacing: 2px;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    clip-path: polygon(10px 0, 100% 0, 100% calc(100% - 10px), calc(100% - 10px) 100%, 0 100%, 0 10px);
  }

  .link-drive__button::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(0, 240, 255, 0.4), transparent);
    transition: left 0.5s ease;
  }

  .link-drive__button:hover {
    background: linear-gradient(135deg, rgba(0, 240, 255, 0.3), rgba(138, 43, 226, 0.3));
    box-shadow: 0 0 30px rgba(0, 240, 255, 0.6);
    transform: translateY(-2px);
  }

  .link-drive__button:hover::before {
    left: 100%;
  }

  @media (max-width: 992px) {
    .sidebar {
      padding-top: 100px;
      height: auto;
    }

    .sidebar__content {
      display: flex;
      justify-content: center;
      gap: 1rem;
      padding: 1.5rem;
    }

    .sidebar__item {
      font-size: 0.9rem;
      padding: 0.75rem 1rem;
      margin: 0;
    }

    .sidebar__item::before {
      display: none;
    }

    .sidebar__item.active {
      transform: scale(1.05);
    }

    .link-drive {
      height: 150px;
      border-top: none;
    }

    .link-drive__text {
      font-size: 0.9rem;
      margin-bottom: 1rem;
    }

    .link-drive__button {
      padding: 0.6rem 1.5rem;
      font-size: 0.9rem;
    }
  }

  @media (max-width: 768px) {
    .sidebar {
      padding-top: 70px;
    }

    .sidebar__item {
      font-size: 0.75rem;
      padding: 0.5rem 0.75rem;
    }

    .link-drive {
      height: 120px;
      padding: 1rem;
    }

    .link-drive__text {
      font-size: 0.8rem;
      margin-bottom: 0.75rem;
    }

    .link-drive__button {
      padding: 0.5rem 1.25rem;
      font-size: 0.8rem;
    }
  }

  @media (max-width: 480px) {
    .sidebar__content {
      flex-wrap: wrap;
      padding: 1rem;
    }

    .sidebar__item {
      font-size: 0.65rem;
      padding: 0.4rem 0.6rem;
    }

    .link-drive__text {
      font-size: 0.7rem;
    }

    .link-drive__button {
      font-size: 0.7rem;
      padding: 0.4rem 1rem;
    }
  }
</style>